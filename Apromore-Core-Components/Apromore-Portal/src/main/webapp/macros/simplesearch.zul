<!-- Controller is SimpleSearchController -->
<window id="simplesearchwindow">
    <style>
        .z-button {
        box-shadow: unset;
        }
    </style>
    <hbox id="previoussearcheshbox" pack="stretch" width="100%" height="24px">
        <combobox id="previoussearchescombobox" autodrop="true" mold="rounded" buttonVisible="true" hflex="10" tooltip="list of keywords separated by ',' (and semantic) or/and by ';' (or semantic). Brackets allowed."/>
        <button id="previoussearchesbutton" hflex="1" style="background: transparent; padding: 0; border:none" image="img/icon/svg/search_22.svg"/>
    </hbox>
</window>