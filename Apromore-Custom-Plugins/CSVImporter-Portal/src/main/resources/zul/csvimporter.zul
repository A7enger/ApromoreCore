<zk>

<window hflex="1" vflex="1" closable="false" position="center" title="CSV Importer" contentStyle="overflow: auto">
    <!--<vbox>-->
    <style>
        .greenLabel {
            font-family: sans-serif;
            color: green;
            font-size: 11px;
            font-weight: normal;
            margin-left: -3px;
        }

        .redLabel {
            font-family: sans-serif;
            color: red;
            font-size: 11px;
            font-weight: normal;
            margin-left: -3px;
        }

        .z-row-content, .z-group-content, .z-groupfoot-content, .z-footer-content {
            font-family: Arial,Sans-serif;
            font-size: 12px;
            color: #636363;
            padding: 0px 0px;
            line-height: 12px;
            overflow: auto;
        }

        <!--.z-groupbox-content {-->
            <!--display: block;-->
            <!--height: inherit;-->
            <!--border: 1px solid #cfcfcf;-->
            <!--border-top: 0;-->
            <!--padding: 2px;-->
            <!--overflow: scroll;-->
            <!--zoom: 1;-->
            <!--width: 95%;-->
        <!--}-->
    </style>

        <groupbox>
            <label value="CSV File (.csv)" width="100%"/>
            <hbox align="center">
                <button id="uploadButton" label="Import File" upload="true,maxsize=-1,multiple=false,native"/>
                <!--<button id="toXESButton" label="Convert To XES"/>-->
                <separator />
                <!--<button id="topCancelButton" label=" " image="img/cancel2.png"></button>-->
            </hbox>
            <hbox align="right">
                <label id="fileNameLabel" width="100%" />
            </hbox>
        </groupbox>

        <groupbox>

            <!--<space bar="false"/>-->
            <div id="gridBox">
                <div id="attrBox"></div>
                <div id="popUPBox"></div>
                <grid id="myGrid" mold="paging" pageSize="15" height="80%" hflex="min" sclass="z-row-content" />
            </div>
        </groupbox>
        <div align="center">
            <button id="toXESButton" label="Convert To XES" image="img/ok.png" disabled="true"></button>
            <button id="cancelButton" label="Cancel" image="img/cancel2.png"></button>
        </div>
    <!--</vbox>-->
</window>
