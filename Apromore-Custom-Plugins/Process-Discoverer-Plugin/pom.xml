<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
	
	<parent>
        <groupId>org.apromore.plugin</groupId>
        <artifactId>plugin</artifactId>
        <version>1.1</version>
        <relativePath>../../Apromore-Plugins/</relativePath>
    </parent>
	
    <artifactId>process-discoverer</artifactId>
    <version>1.0.0</version>
    <packaging>bundle</packaging>
    <name>Process Discoverer</name>

    <build>
        <plugins>
        	<plugin>
            	<groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Import-Bundle>
                            org.apromore.raffaeleconforti-osgi;bundle-version="[1.0,2.0]"
                        </Import-Bundle>
                        <Import-Package>
                            org.springframework.beans.factory.aspectj,
                            org.processmining.contexts.*;version="[1.0,2.0)",
                            org.processmining.framework.*;version="[1.0,2.0)",
                            org.processmining.models.*;version="[1.0,2.0)",
                            org.processmining.plugins.*;version="[1.0,2.0)",
                            org.deckfour.xes.model.*;version="[2.0,3.0)",
                            org.deckfour.xes.factory.*;version="[2.0,3.0)",
                            !com.raffaeleconforti.processdiscoverer.*,
                            *
                        </Import-Package>
                        <Export-Package>
                            org.apromore.plugin.processdiscoverer, 
							org.apromore.plugin.processdiscoverer.service,
							org.apromore.plugin.processdiscoverer.impl.filter, 
							org.apromore.plugin.processdiscoverer.impl
                        </Export-Package>
                    </instructions>
                </configuration>
            </plugin>		
        </plugins>
    </build>

    <dependencies>
		
		<dependency>
            <groupId>org.apromore</groupId>
            <artifactId>raffaeleconforti-osgi</artifactId>
        </dependency>
		
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>apromore-manager</artifactId>
            <version>1.1</version>
        </dependency>

        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>apromore-portal</artifactId>
            <version>1.1</version>
            <classifier>classes</classifier>
        </dependency>

        <dependency>
            <groupId>org.apromore.plugin</groupId>
            <artifactId>portal-plugin-api</artifactId>
        </dependency>

	<dependency>
            <groupId>org.apromore</groupId>
            <artifactId>bimp-annotation-logic</artifactId>
            <version>1.0</version>
        </dependency>

        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>bpmndiagramimporter-logic</artifactId>
            <version>1.1</version>
        </dependency>

        <dependency>
            <groupId>org.xeslite</groupId>
            <artifactId>xeslite</artifactId>
            <version>0.0.1</version>
        </dependency>
		
		<!-- Note: this dependency is only for -->
        <dependency>
            <groupId>org.apromore.plugin</groupId>
            <artifactId>log-animation-portal-plugin</artifactId>
            <version>1.0</version>
            <classifier>classes</classifier>
        </dependency>

        <dependency>
            <groupId>org.ow2.bundles</groupId>
            <artifactId>ow2-bundles-externals-opencsv</artifactId>
            <version>1.0.36</version>
        </dependency>
		
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>eclipse-collections-osgi</artifactId>
            <version>1.1</version>
        </dependency>		
    </dependencies>
</project>

