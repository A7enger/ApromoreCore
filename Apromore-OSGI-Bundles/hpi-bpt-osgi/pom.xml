<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.apromore</groupId>
        <artifactId>apromore</artifactId>
        <version>1.1</version>
        <relativePath>../../</relativePath>
    </parent>

    <groupId>org.apromore</groupId>
    <artifactId>hpi-bpt-osgi</artifactId>
    <version>1.0</version>
    <packaging>bundle</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.7</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Embed-Dependency>
                            artifactId=uma|de-jbpt|antlr-rt|pnapi-java
                        </Embed-Dependency>
                        <Embed-Transitive>false</Embed-Transitive>
                        <Bundle-ClassPath>.,{maven-dependencies}</Bundle-ClassPath>
                        <Bundle-Name>HPI BPT OSGI</Bundle-Name>
                        <Import-Package>
                            !org.junit,
                            !junit.*,
                            !lpsolve,
                            !org.w3c.dom,
                            !org.antlr.stringtemplate,
                            !javax.swing,
                            !javax.xml.transform,
                            !javax.xml.transform.dom,
                            !javax.xml.transform.stream,
                            !javax.xml.parsers,
                            *
                        </Import-Package>                      
                        <Export-Package>
                            de.hpi.bpt.graph,
                            de.hpi.bpt.graph.abs,
                            de.hpi.bpt.graph.algo.*,
                            de.hpi.bpt.graph.util,
                            de.hpi.bpt.alignment,
                            de.hpi.bpt.hypergraph.*,
                            de.hpi.bpt.process,
                            de.hpi.bpt.process.*,
                            de.hpi.bpt.utils
                        </Export-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>de.hpi.jbpt</groupId>
            <artifactId>de-jbpt</artifactId>
            <version>0.2.77</version>
        </dependency>   
        
        <!-- de-jbpt requires uma and json -->
        <dependency>
            <groupId>hub.top</groupId>
            <artifactId>uma</artifactId>
            <version>1.3.1</version>
        </dependency>     
        <dependency>
            <groupId>org.json</groupId>
            <artifactId>json</artifactId>
        </dependency>      

        <!-- uma requires antlr-rt and hub.top.petrinet -->
        <dependency>
            <groupId>org.antlr.runtime</groupId>
            <artifactId>antlr-rt</artifactId>
            <version>3.2.0</version>
        </dependency>    
        <dependency>
            <groupId>hub.top.petrinet</groupId>
            <artifactId>pnapi-java</artifactId>
            <version>1.0.5</version>
        </dependency>              

    </dependencies>
</project>
 
