<?xml version="1.0" encoding="UTF-8"?>


<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.apromore</groupId>
        <artifactId>apromore</artifactId>
        <version>1.1</version>
        <relativePath>../../</relativePath>
    </parent>

    <artifactId>portal-assembly</artifactId>
    <packaging>pom</packaging>
    <name>Apromore Portal Bundle Assembly</name>

    <properties>
        <deploy.dir>${project.build.directory}/repository</deploy.dir>
    </properties>

    <scm>
        <url>http://apromore.googlecode.com/svn/trunk/Apromore-Assembly/Portal-Assembly</url>
        <connection>scm:svn:http://apromore.googlecode.com/svn/trunk/Apromore-Assembly/Portal-Assembly</connection>
        <developerConnection>scm:svn:https://apromore.googlecode.com/svn/trunk/Apromore-Assembly/Portal-Assembly</developerConnection>
    </scm>

    <dependencies>

        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>apromore-portal</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>apromore-portal</artifactId>
            <version>${project.version}</version>
            <classifier>classes</classifier>
        </dependency>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>build-tools</artifactId>
            <version>1.1</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>properties-maven-plugin</artifactId>
                <version>1.0-alpha-2</version>
                <executions>
                    <execution>
                        <phase>initialize</phase>
                        <goals>
                            <goal>read-project-properties</goal>
                        </goals>
                        <configuration>
                            <files>
                                <file>${project.parent.basedir}/site.properties</file>
                            </files>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${deploy.dir}/usr</outputDirectory>
                            <overWriteIfNewer>true</overWriteIfNewer>
                            <includeScope>compile</includeScope>
                            <excludeTransitive>false</excludeTransitive>
                            <!-- Prevent these non-OSGI dependencies to be copied to /usr -->
                            <excludeArtifactIds>
                                org.junit,org.apromore,com.springsource.org.aopalliance,fluent-hc,httpclient,httpcore,jcl-over-slf4j,logback-core,
                                jaxb2-basics-runtime,org.eclipse.gemini.blueprint.extender,org.eclipse.gemini.blueprint.io,logback-classic,
                                org.eclipse.gemini.blueprint.core,org.eclipse.osgi,org.eclipse.osgi.services,slf4j-api,org.springframework.aop,
                                org.springframework.asm,org.springframework.beans,org.springframework.context,org.springframework.core,
                                org.springframework.expression,org.springframework.jdbc,org.springframework.jms,org.springframework.orm,
                                org.springframework.oxm,org.springframework.transaction,org.springframework.web,org.springframework.web.servlet,
                                org.springframework.aspects,org.springframework.context.support,commons-httpclient,javax.persistence,
                                com.springsource.javax.xml.bind,
                            </excludeArtifactIds>
                            <excludeGroupIds>
                                org.zkoss.zk, org.zkoss.common, org.beanshell
                            </excludeGroupIds>
                            <!-- Exclude the manager-classes.jar which is only used to pull in transitive dependencies -->
                            <excludeClassifiers>
                                classes
                            </excludeClassifiers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.2.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>java</goal>
                        </goals>
                        <configuration>
                            <mainClass>org.apromore.osgihelper.RemoveNonOSGIJars</mainClass>
                            <arguments>
                                <argument>${deploy.dir}/usr</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
