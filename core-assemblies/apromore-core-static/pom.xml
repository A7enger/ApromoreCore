<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.apromore</groupId>
    <artifactId>core-assemblies</artifactId>
    <version>7.20-SNAPSHOT</version>
  </parent>
  <artifactId>apromore-core-static</artifactId>
  <packaging>pom</packaging>

  <properties>
    <core.basedir>${project.basedir}/../..</core.basedir>
    <maven.repo.local>${user.home}/.m2/repository</maven.repo.local>
    <version.edition>Apromore Core (static assembly)</version.edition>
  </properties>

  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>core-bom</artifactId>
      <version>${project.version}</version>
      <type>pom</type>
      <scope>import</scope>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>core-features</artifactId>
      <version>${project.version}</version>
      <type>xml</type>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>karaf-shell-branding</artifactId>
      <version>1.0</version>
      <type>properties</type>
    </dependency>

    <dependency>
      <groupId>org.apache.karaf.features</groupId>
      <artifactId>static</artifactId>
      <type>kar</type>
    </dependency>

    <dependency>
      <groupId>org.apache.karaf.features</groupId>
      <artifactId>standard</artifactId>
      <type>xml</type>
      <classifier>features</classifier>
    </dependency>

    <dependency>
      <groupId>org.apache.karaf.services</groupId>
      <artifactId>org.apache.karaf.services.staticcm</artifactId>
      <version>${karaf.version}</version>
    </dependency>
  </dependencies>

  <build>
    <resources>
      <resource>
        <directory>${project.build.directory}/templates</directory>
        <filtering>true</filtering>
        <targetPath>${project.build.directory}/assembly</targetPath>
      </resource>
    </resources>

    <plugins>
      <plugin>
        <groupId>org.apache.karaf.tooling</groupId>
        <artifactId>karaf-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>process-resources</id>
            <phase>process-resources</phase>
            <goals>
              <goal>assembly</goal>
            </goals>
          </execution>
          <execution>
            <id>package</id>
            <goals>
              <goal>archive</goal>
            </goals>
          </execution>
          <execution>
            <id>dockerfile</id>
            <goals>
              <goal>dockerfile</goal>
            </goals>
            <configuration>
              <command>["karaf"]</command>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <startupFeatures>
            <feature>static-framework</feature>
            <feature>eventadmin</feature>
            <feature>jaas</feature>
            <feature>jpa</feature>
            <feature>war</feature>

            <feature>shell</feature>
            <feature>webconsole</feature>

            <feature>apromore-core</feature>
          </startupFeatures>
          <startupBundles>
            <bundle>mvn:org.apache.felix/org.apache.felix.fileinstall/3.6.4</bundle>
            <bundle>mvn:org.apache.geronimo.specs/geronimo-jms_1.1_spec/1.1.1</bundle>
          </startupBundles>
          <framework>static</framework>
          <useReferenceUrls>true</useReferenceUrls>
          <environment>static</environment>
          <javase>${java.version}</javase>
          <archiveTarGz>${karaf.archive.tar.gz}</archiveTarGz>
          <archiveZip>${karaf.archive.zip}</archiveZip>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <configuration>
          <propertiesEncoding>UTF-8</propertiesEncoding>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>resources</goal>
            </goals>
          </execution>
          <execution>
            <id>site.properties</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <delimiters>
                <delimiter>@</delimiter>
              </delimiters>
              <outputDirectory>${project.build.directory}/assembly/etc</outputDirectory>
              <resources>
                <resource>
                  <directory>${core.basedir}</directory>
                  <includes>
                    <include>site.properties</include>
                  </includes>
                  <filtering>true</filtering>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>com.coderplus.maven.plugins</groupId>
        <artifactId>copy-rename-maven-plugin</artifactId>
        <version>1.0.1</version>
        <executions>
          <execution>
            <id>branding.properties</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <sourceFile>${maven.repo.local}/org/apromore/karaf-shell-branding/1.0/karaf-shell-branding-1.0.properties</sourceFile>
              <destinationFile>${project.build.directory}/templates/etc/branding.properties</destinationFile>
            </configuration>
          </execution>
          <execution>
            <id>git.cfg</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <sourceFile>${core.basedir}/target/classes/META-INF/git.properties</sourceFile>
              <destinationFile>${project.build.directory}/assembly/etc/git.cfg</destinationFile>
            </configuration>
          </execution>
          <execution>
            <id>git.core.cfg</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <sourceFile>${core.basedir}/target/classes/META-INF/git.properties</sourceFile>
              <destinationFile>${project.build.directory}/assembly/etc/git.core.cfg</destinationFile>
            </configuration>
          </execution>
          <execution>
            <id>ehcache.xml</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <sourceFile>${core.basedir}/Apromore-Cache/src/main/resources/ehcache.xml</sourceFile>
              <destinationFile>${project.build.directory}/assembly/configuration/ehcache.xml</destinationFile>
            </configuration>
          </execution>
          <execution>
            <id>portalContext-security.xml</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <sourceFile>${core.basedir}/Supplements/Virgo/portalContext-security.xml</sourceFile>
              <destinationFile>${project.build.directory}/assembly/configuration/portalContext-security.xml</destinationFile>
            </configuration>
          </execution>
          <execution>
            <id>site.cfg</id>
            <phase>process-resources</phase>
            <goals>
              <goal>rename</goal>
            </goals>
            <configuration>
              <sourceFile>${project.build.directory}/assembly/etc/site.properties</sourceFile>
              <destinationFile>${project.build.directory}/assembly/etc/site.cfg</destinationFile>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
